{% extends 'base.html.twig' %}

{% block title %}Evento{% endblock %}

{% block body %}
    <h1>Evento</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evento.id }}</td>
            </tr>
            <tr>
                <th>Validado</th>
                <td>{{ evento.validado ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Destacado</th>
                <td>{{ evento.destacado ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ evento.tipo }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ evento.descripcion }}</td>
            </tr>
            <tr>
                <th>Enlace</th>
                <td>{{ evento.enlace }}</td>
            </tr>
            <tr>
                <th>FechaHoraComienzo</th>
                <td>{{ evento.fechaHoraComienzo ? evento.fechaHoraComienzo|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ImagenEvento</th>
                <td>{{ evento.imagenEvento }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('evento_index') }}">back to list</a>

    <a href="{{ path('evento_edit', {'id': evento.id}) }}">edit</a>

    {{ include('evento/_delete_form.html.twig') }}
{% endblock %}
