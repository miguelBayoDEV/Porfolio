{% extends 'base.html.twig' %}

{% block title %}Mision{% endblock %}

{% block body %}
    <h1>Mision</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mision.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ mision.titulo }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ mision.descripcion }}</td>
            </tr>
            <tr>
                <th>Puntos</th>
                <td>{{ mision.puntos }}</td>
            </tr>
            <tr>
                <th>Completada</th>
                <td>{{ mision.completada ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('mision_index') }}">back to list</a>

    <a href="{{ path('mision_edit', {'id': mision.id}) }}">edit</a>

