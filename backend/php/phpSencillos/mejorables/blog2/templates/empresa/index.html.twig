{% extends 'base.html.twig' %}

{% block title %}Empresa index{% endblock %}

{% block body %}
    <h1>Empresa index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Cif</th>
                <th>Direccion</th>
                <th>Cp</th>
                <th>Localidad</th>
                <th>Provincia</th>
                <th>Logo</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for empresa in empresas %}
            <tr>
                <td>{{ empresa.id }}</td>
                <td>{{ empresa.nombre }}</td>
                <td>{{ empresa.cif }}</td>
                <td>{{ empresa.direccion }}</td>
                <td>{{ empresa.cp }}</td>
                <td>{{ empresa.localidad }}</td>
                <td>{{ empresa.provincia }}</td>
                <td>{{ empresa.logo }}</td>
                <td>{{ empresa.status ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('empresa_show', {'id': empresa.id}) }}">show</a>
                    <a href="{{ path('empresa_edit', {'id': empresa.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('empresa_new') }}">Create new</a>
{% endblock %}
