{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    th, td {
        padding-right:10%;
        border: 2px solid black;
    }
</style>

<div class="example-wrapper">

    Cuadrante de horas por d√≠as:
    <br/>
    <table>
        <tr>
            <th>Nombre empleado: {{ empleado.nombre }}</th>
            <th>Fechas de entrada:</th>
            <th>Fechas de salida:</th>
        <tr/>
        {% for logged in empleado.loggeds %}
            <tr>
                <td></td>
                <td>{{ logged.fechaEntrada|date("Y-m-d H:i:s") }}</td>
                <td>{{ logged.fechaSalida|date("Y-m-d H:i:s") }}</td>
        {% endfor %}
    </table>

</div>
{% endblock %}